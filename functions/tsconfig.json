{
  "compilerOptions": {
    "module": "CommonJS", // Cambiado a CommonJS
    "esModuleInterop": true,
    "moduleResolution": "node", // Cambiado a "node" para resolución de módulos
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
